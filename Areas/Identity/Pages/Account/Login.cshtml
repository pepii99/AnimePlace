@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class="login-wrapper">
    <div class="login-content">
        <div class="row justify-content-center">
            <div class="col-lg-5">
            <section>
                <form id="account" method="post">
                    <h2 style="font-size: 1.5rem; color: whitesmoke; margin: 0;">Use a local account to log in.</h2>
                    <hr />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating" style="margin-bottom: 20px;">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" style="padding: 0.2rem 0.4rem; max-height: 3rem;" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <label asp-for="Input.Password" class="form-label"></label>
                    <div class="form-floating" style="margin-bottom: 20px;">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" style="padding: 0.2rem 0.4rem; max-height: 3rem; font-size: 1.2rem;" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="margin-bottom: 20px;">Log in</button>
                    </div>
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
