@using AnimePlace.Models.InputModels
@model EditAnimeInputModel

@{
    ViewData["Title"] = "Edit Anime";
    
}

<form method="post" asp-action="Edit">
    <div class="content">
    <div class="p-3 mt-4 px-4" style="margin-top: 0 !important;">
        <div class="row pb-2">
        </div>
        <div class="mb-3" style="color: #ffffff">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="AlternativeName"></label>
            <input asp-for="AlternativeName" class="form-control" />
            <span asp-validation-for="AlternativeName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Episodes"></label>
            <input asp-for="Episodes" class="form-control" />
            <span asp-validation-for="Episodes" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Sypnosis"></label>
            <textarea asp-for="Sypnosis" class="form-control"></textarea>
            <span asp-validation-for="Sypnosis" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Rating"></label>
            <input asp-for="Rating" class="form-control" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
        <div class="mb-3">
                <label asp-for="Aired">Aired Default: Oct 3, 2020 to Mar 27, 2021</label>
            <input asp-for="Aired" class="form-control" />
            <span asp-validation-for="Aired" class="text-danger"></span>
        </div>
        <div class="mb-3">
                <label asp-for="Source">Source Default: Manga</label>
            <input asp-for="Source" class="form-control" />
            <span asp-validation-for="Source" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Status"></label>
            <input asp-for="Status" class="form-control" />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="mb-3">
                <label asp-for="BorderImageUrl">BorderImageUrl Default: no-image</label>
            <input asp-for="BorderImageUrl" class="form-control" />
            <span asp-validation-for="BorderImageUrl" class="text-danger"></span>
        </div>
