@using AnimePlace.Models.ViewModels
@model ProfileViewModel


<div class="profile-banner"></div>

<div class="profile-container">
    <div class="profile-list">
        <div class="watching-list">
            <h5>Watching animes</h5>
            <div class="watching-list-container">
                @foreach(var watchingAnime in @Model.CurrentlyWatchingListView)
                {
                    <div class="anime-list-item">
                        <a asp-controller="Animes" asp-action="GetById" asp-route-id="@watchingAnime.AnimeId"><img src="~/img/Animes/@(watchingAnime.AnimeImageUrl).jpg" alt="@watchingAnime.AnimeTitle" class="anime-list-img"/></a>
                    </div>
                }
            </div>
        </div>
    </div>
    
        <div class="completed-list">
            <h5>Completed animes</h5>
            <div class="completed-list-container">
                @foreach(var completedAnime in @Model.CompletedWatchListView)
                {
                    <div class="anime-list-item">
                        <a asp-controller="Animes" asp-action="GetById" asp-route-id="@completedAnime.AnimeId"><img src="~/img/Animes/@(completedAnime.AnimeImageUrl).jpg" alt="@completedAnime.AnimeTitle" class="anime-list-img"/></a>
                    </div>
                }
            </div>
        </div>

        <div class="plantowatch-list">
            <h5>Plan to watch animes</h5>
            <div class="plantowatch-list-container">
                @foreach(var planToWatchAnime in @Model.PlanToWatchListView)
                {
                    <div class="anime-list-item">
                        <a asp-controller="Animes" asp-action="GetById" asp-route-id="@planToWatchAnime.AnimeId"><img src="~/img/Animes/@(planToWatchAnime.AnimeImageUrl).jpg" alt="@planToWatchAnime.AnimeTitle" class="anime-list-img"/></a>
                    </div>
                }
            </div>
        </div>

        <div class="favorite-animes">
            <h5>Favorite animes</h5>
            <div class="favorite-animes-container">
                @foreach(var favoriteAnime in @Model.FavoriteAnimes)
                {
                    <div class="anime-list-item">
                        <a asp-controller="Animes" asp-action="GetById" asp-route-id="@favoriteAnime.Id"><img src="~/img/Animes/@(favoriteAnime.ImageUrl).jpg" alt="@favoriteAnime.Title" class="anime-list-img"/></a>
                    </div>
                }
            </div>
        </div>

        <div class="favorite-characters">
            <h5>Favorite characters</h5>
            <div class="favorite-characters-container">
                @foreach(var favoriteCharacter in @Model.FavoriteCharacters)
                {
                    <div class="anime-list-item">
                        <a asp-controller="Characters" asp-action="GetById" asp-route-id="@favoriteCharacter.Id"><img src="~/img/Characters/@(favoriteCharacter.ImageUrl).jpg" alt="@favoriteCharacter.Name" class="anime-list-img"/></a>
                    </div>
                }
            </div>
        </div>
    
